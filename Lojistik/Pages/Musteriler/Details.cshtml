@page "{id:int}"
@model Lojistik.Pages.Musteriler.DetailsModel
@{
    ViewData["Title"] = "Müşteri Detay";
}

<h2>Müşteri Detay</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Müşteri Adı</dt>
    <dd class="col-sm-10">@Model.Musteri.MusteriAdi</dd>

    <dt class="col-sm-2">Ülke</dt>
    <dd class="col-sm-10">@Model.Musteri.Ulke?.UlkeAdi</dd>

    <dt class="col-sm-2">Şehir</dt>
    <dd class="col-sm-10">@Model.Musteri.Sehir?.SehirAdi</dd>

    <dt class="col-sm-2">Adres</dt>
    <dd class="col-sm-10">@Model.Musteri.Adres</dd>

    <dt class="col-sm-2">Posta Kodu</dt>
    <dd class="col-sm-10">@Model.Musteri.PostaKodu</dd>

    <dt class="col-sm-2">Telefon</dt>
    <dd class="col-sm-10">@Model.Musteri.Telefon</dd>

    <dt class="col-sm-2">E-posta</dt>
    <dd class="col-sm-10">@Model.Musteri.Email</dd>

    <!-- Yeni: Gümrük Kodu -->
    <dt class="col-sm-2">Gümrük Kodu</dt>
    <dd class="col-sm-10">@Model.Musteri.GumrukKod</dd>

    <dt class="col-sm-2">Aktif mi</dt>
    <dd class="col-sm-10">@(Model.Musteri.IsActive ? "Evet" : "Hayır")</dd>
</dl>

<div>
    <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@Model.Musteri.MusteriID">Düzenle</a>
    <a class="btn btn-secondary btn-sm" asp-page="./Index">Liste</a>
</div>
