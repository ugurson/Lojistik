@page
@model Lojistik.Pages.Musteriler.IndexModel
@{
    ViewData["Title"] = "Müşteriler";
}

<h2>Müşteriler</h2>

<p>
    <a class="btn btn-success btn-sm" asp-page="./Create">Yeni Müşteri</a>
</p>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Adres</th>
            <th>Posta Kodu</th>
            <th>Telefon</th>
            <th>E-posta</th>
            <th>Ülke</th>
            <th>Şehir</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 0;
            foreach (var m in Model.List)
            {
                <tr>
                    <td>@(++i)</td>
                    <td>@m.MusteriAdi</td>
                    <td>@m.Adres</td>
                    <td>@m.PostaKodu</td>
                    <td>@m.Telefon</td>
                    <td>@m.Email</td>
                    <td>@m.Ulke?.UlkeAdi</td>
                    <td>@m.Sehir?.SehirAdi</td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@m.MusteriID">Detay</a>
                            <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@m.MusteriID">Düzenle</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@m.MusteriID">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
