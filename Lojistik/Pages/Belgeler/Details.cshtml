@page
@model Lojistik.Pages.Belgeler.DetailsModel

@{
    ViewData["Title"] = "Belge Detay";
}

<h2 class="mb-3">Belge Detay</h2>

@if (Model.AracBelgesi is null)
{
    <div class="alert alert-warning">Kayıt bulunamadı.</div>
}
else
{
    <div class="container px-0">
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Belge Tipi</div>
            <div class="col-sm-6">@Model.AracBelgesi.BelgeTipi</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Belge No</div>
            <div class="col-sm-6">@Model.AracBelgesi.BelgeNo</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Firma</div>
            <div class="col-sm-6">@Model.AracBelgesi.Firma</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Başlangıç Tarihi</div>
            <div class="col-sm-6">@Model.AracBelgesi.BaslangicTarihi.ToString("dd-MM-yyyy")</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Bitiş Tarihi</div>
            <div class="col-sm-6">@(Model.AracBelgesi.BitisTarihi?.ToString("dd-MM-yyyy") ?? "-")</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Tutar</div>
            <div class="col-sm-6">@(Model.AracBelgesi.Tutar?.ToString("N2") ?? "-")</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Para Birimi</div>
            <div class="col-sm-6">@Model.AracBelgesi.ParaBirimi</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Dosya Yolu</div>
            <div class="col-sm-6">@Model.AracBelgesi.DosyaYolu</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Notlar</div>
            <div class="col-sm-6">@Model.AracBelgesi.Notlar</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 fw-semibold">Araç</div>
            <div class="col-sm-6">@Model.AracBelgesi.Arac?.Plaka</div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="./Edit" asp-route-id="@Model.AracBelgesi.BelgeID" class="btn btn-primary me-2">Düzenle</a>
        <a asp-page="./Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
}
