@page
@model Lojistik.Pages.Araclar.BitenBelgelerModel
@{
    ViewData["Title"] = "Süresi Biten / 30 Gün İçinde Bitecek Belgeler";
}

<h2 class="mb-3">Süresi Biten / 30 Gün İçinde Bitecek Belgeler</h2>

<!-- SÜRESİ BİTEN -->
<h4 class="text-danger">Süresi Biten Belgeler</h4>
@if (Model.Bitenler == null || !Model.Bitenler.Any())
{
    <div class="alert alert-success">Süresi biten belge yok.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead>
            <tr>
                <th>Plaka</th>
                <th>Belge Tipi</th>
                <th>Bitiş Tarihi</th>
                <th style="width: 260px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Bitenler)
            {
                <tr>
                    <td>@b.Arac?.Plaka</td>
                    <td>@b.BelgeTipi</td>
                    <td><span style="color:red; font-weight:bold;">@b.BitisTarihi?.ToString("dd-MM-yyyy")</span></td>
                    <td class="text-nowrap">
                        <div class="btn-group btn-group-sm" role="group">
                            <!-- [YENİ] aracId + returnUrl -->
                            <a asp-page="/Belgeler/Details" asp-route-id="@b.BelgeID"
                               asp-route-aracId="@b.AracID" asp-route-returnUrl="/Araclar/BitenBelgeler"
                               class="btn btn-outline-secondary">Detay</a>

                            <a asp-page="/Belgeler/Edit" asp-route-id="@b.BelgeID"
                               asp-route-aracId="@b.AracID" asp-route-returnUrl="/Araclar/BitenBelgeler"
                               class="btn btn-outline-primary">Düzenle</a>

                            <a asp-page="/Belgeler/Delete" asp-route-id="@b.BelgeID"
                               asp-route-aracId="@b.AracID" asp-route-returnUrl="/Araclar/BitenBelgeler"
                               class="btn btn-outline-danger">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- 30 GÜN İÇİNDE BİTECEK -->
<h4 class="mt-4 text-warning">30 Gün İçinde Bitecek Belgeler</h4>
@if (Model.Yaklasanlar == null || !Model.Yaklasanlar.Any())
{
    <div class="alert alert-info">30 gün içinde bitecek belge yok.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead>
            <tr>
                <th>Plaka</th>
                <th>Belge Tipi</th>
                <th>Bitiş Tarihi</th>
                <th>Kalan Gün</th>
                <th style="width: 260px;"></th>
            </tr>
        </thead>
        <tbody>
            @{
                var today = DateOnly.FromDateTime(DateTime.Today);
            }
            @foreach (var b in Model.Yaklasanlar)
            {
                var kalan = b.BitisTarihi.HasValue ? (b.BitisTarihi.Value.DayNumber - today.DayNumber) : 0;
                <tr>
                    <td>@b.Arac?.Plaka</td>
                    <td>@b.BelgeTipi</td>
                    <td>@b.BitisTarihi?.ToString("dd-MM-yyyy")</td>
                    <td class="fw-semibold">@kalan</td>
                    <td class="text-nowrap">
                        <div class="btn-group btn-group-sm" role="group">
                            <!-- [YENİ] aracId + returnUrl -->
                            <a asp-page="/Belgeler/Details" asp-route-id="@b.BelgeID"
                               asp-route-aracId="@b.AracID" asp-route-returnUrl="/Araclar/BitenBelgeler"
                               class="btn btn-outline-secondary">Detay</a>

                            <a asp-page="/Belgeler/Edit" asp-route-id="@b.BelgeID"
                               asp-route-aracId="@b.AracID" asp-route-returnUrl="/Araclar/BitenBelgeler"
                               class="btn btn-outline-primary">Düzenle</a>

                            <a asp-page="/Belgeler/Delete" asp-route-id="@b.BelgeID"
                               asp-route-aracId="@b.AracID" asp-route-returnUrl="/Araclar/BitenBelgeler"
                               class="btn btn-outline-danger">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
