@* Pages/Siparisler/Edit.cshtml *@
@page "{id:int}"
@model Lojistik.Pages.Siparisler.EditModel
@{
    ViewData["Title"] = "Sipariş Düzenle";
}

<h2 class="mb-3">Sipariş Düzenle</h2>

<form method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Input.SiparisID" />

    <div class="col-md-3">
        <label asp-for="Input.SiparisTarihi" class="form-label">Tarih</label>
        <input asp-for="Input.SiparisTarihi" type="date" class="form-control" />
        <span asp-validation-for="Input.SiparisTarihi" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.GonderenMusteriID" class="form-label">Gönderen</label>
        <select asp-for="Input.GonderenMusteriID" asp-items="Model.MusterilerSelect" class="form-select"></select>
        <span asp-validation-for="Input.GonderenMusteriID" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.AliciMusteriID" class="form-label">Alıcı</label>
        <select asp-for="Input.AliciMusteriID" asp-items="Model.MusterilerSelect" class="form-select"></select>
        <span asp-validation-for="Input.AliciMusteriID" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.AraTedarikciMusteriID" class="form-label">Ara Tedarikçi</label>
        <select asp-for="Input.AraTedarikciMusteriID" asp-items="Model.MusterilerSelect" class="form-select">
            <option value="">(Yok)</option>
        </select>
        <span asp-validation-for="Input.AraTedarikciMusteriID" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Input.YukAciklamasi" class="form-label">Yük Açıklaması</label>
        <input asp-for="Input.YukAciklamasi" class="form-control" />
        <span asp-validation-for="Input.YukAciklamasi" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Input.Adet" class="form-label">Adet</label>
        <input asp-for="Input.Adet" class="form-control" />
        <span asp-validation-for="Input.Adet" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Input.AdetCinsi" class="form-label">Adet Cinsi</label>
        <input asp-for="Input.AdetCinsi" class="form-control" />
        <span asp-validation-for="Input.AdetCinsi" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Input.Kilo" class="form-label">Kilo</label>
        <input asp-for="Input.Kilo" class="form-control" />
        <span asp-validation-for="Input.Kilo" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.Tutar" class="form-label">Tutar</label>
        <input asp-for="Input.Tutar" class="form-control" />
        <span asp-validation-for="Input.Tutar" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Input.ParaBirimi" class="form-label">PB</label>
        <input asp-for="Input.ParaBirimi" class="form-control" />
        <span asp-validation-for="Input.ParaBirimi" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.FaturaNo" class="form-label">Fatura No</label>
        <input asp-for="Input.FaturaNo" class="form-control" />
        <span asp-validation-for="Input.FaturaNo" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.SubeKodu" class="form-label">Şube Kodu</label>
        <input asp-for="Input.SubeKodu" class="form-control" />
        <span asp-validation-for="Input.SubeKodu" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.Durum" class="form-label">Durum</label>
        <select asp-for="Input.Durum" class="form-select">
            <option value="0">0 - Taslak</option>
            <option value="1">1 - Onaylandı</option>
            <option value="2">2 - Yükleme</option>
            <option value="3">3 - Tamamlandı</option>
            <option value="4">4 - İptal</option>
        </select>
        <span asp-validation-for="Input.Durum" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Input.Notlar" class="form-label">Notlar</label>
        <textarea asp-for="Input.Notlar" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Input.Notlar" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a asp-page="./Details" asp-route-id="@Model.Input.SiparisID" class="btn btn-outline-secondary">İptal</a>
        <a asp-page="./Delete" asp-route-id="@Model.Input.SiparisID" class="btn btn-outline-danger">Sil</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
