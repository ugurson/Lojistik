@page "{id:int}"
@model Lojistik.Pages.Siparisler.DeleteModel
@{
    ViewData["Title"] = "Sipariş Sil";
    var s = Model.Data!;
}

<h2 class="mb-3 text-danger">Sipariş Sil</h2>

<div class="alert alert-warning">
    <strong>Bu siparişi silmek istediğinize emin misiniz?</strong>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@s.SiparisID</dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@s.SiparisTarihi.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Yük Açıklaması</dt>
            <dd class="col-sm-9 text-prewrap">@s.YukAciklamasi</dd>

            <dt class="col-sm-3">Gönderen</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(s.Gonderen) ? s.Gonderen : "—")</dd>

            <dt class="col-sm-3">Alıcı</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(s.Alici) ? s.Alici : "—")</dd>

            <dt class="col-sm-3">Tutar</dt>
            <dd class="col-sm-9">
                @((s.Tutar?.ToString("N2")) ?? "—") @(string.IsNullOrWhiteSpace(s.ParaBirimi) ? "" : s.ParaBirimi)
            </dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(s.Durum == 0 ? "secondary" : (s.Durum == 1 ? "info" : (s.Durum == 2 ? "primary" : (s.Durum == 3 ? "success" : "dark"))))">
                    @s.Durum
                </span>
            </dd>
        </dl>
    </div>
</div>

<form method="post" class="d-flex gap-2">
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-page="./Details" asp-route-id="@s.SiparisID" class="btn btn-outline-secondary">Vazgeç</a>
</form>
