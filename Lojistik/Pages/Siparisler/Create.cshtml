@page
@model Lojistik.Pages.Siparisler.CreateModel

   @{ /* geçici test */ var _t = ViewData.ContainsKey("Title") ? ViewData["Title"] : "(null)"; }



<h2 class="mb-3">Yeni Sipariş</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="post" class="form-horizontal" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- TEMEL BİLGİLER -->
            <div class="row g-3 align-items-center mb-1">
                <div class="col-sm-2">
                    <label asp-for="Siparis.SiparisTarihi" class="col-form-label">Sipariş Tarihi</label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Siparis.SiparisTarihi" class="form-control" type="date" />
                    <span asp-validation-for="Siparis.SiparisTarihi" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-1">
                <div class="col-sm-2">
                    <label asp-for="Siparis.YukAciklamasi" class="col-form-label">Yük Açıklaması</label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="Siparis.YukAciklamasi" class="form-control" placeholder="Örn: Hammadde / 1 parti" />
                    <span asp-validation-for="Siparis.YukAciklamasi" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4" />

            <!-- MÜŞTERİLER -->
            <div class="row g-3 align-items-center mb-1">
                <div class="col-sm-2">
                    <label asp-for="Siparis.GonderenMusteriID" class="col-form-label">Gönderen</label>
                </div>
                <div class="col-sm-6">
                    <select asp-for="Siparis.GonderenMusteriID" class="form-select" asp-items="Model.GonderenList">
                        <option value="">-- Seçiniz --</option>
                    </select>
                    <span asp-validation-for="Siparis.GonderenMusteriID" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-1">
                <div class="col-sm-2">
                    <label asp-for="Siparis.AliciMusteriID" class="col-form-label">Alıcı</label>
                </div>
                <div class="col-sm-6">
                    <select asp-for="Siparis.AliciMusteriID" class="form-select" asp-items="Model.AliciList">
                        <option value="">-- Seçiniz --</option>
                    </select>
                    <span asp-validation-for="Siparis.AliciMusteriID" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-1">
                <div class="col-sm-2">
                    <label asp-for="Siparis.AraTedarikciMusteriID" class="col-form-label">Ara Tedarikçi</label>
                </div>
                <div class="col-sm-6">
                    <select asp-for="Siparis.AraTedarikciMusteriID" class="form-select" asp-items="Model.AraTedarikciList">
                        <option value="">(Yok)</option>
                    </select>
                </div>
            </div>

            <hr class="my-4" />

            <!-- MİKTAR & KİLO -->
            <div class="row g-3 align-items-center mb-1">
                <div class="col-sm-2">
                    <label asp-for="Siparis.Adet" class="col-form-label">Adet</label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="Siparis.Adet" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Siparis.Adet" class="text-danger"></span>
                </div>

                <div class="col-sm-2 text-sm-end">
                    <label asp-for="Siparis.AdetCinsi" class="col-form-label">Adet Cinsi</label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="Siparis.AdetCinsi" class="form-control" placeholder="Palet / Koli / Parti" />
                    <span asp-validation-for="Siparis.AdetCinsi" class="text-danger"></span>
                </div>

                <div class="col-sm-2 text-sm-end">
                    <label asp-for="Siparis.Kilo" class="col-form-label">Kilo (kg)</label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="Siparis.Kilo" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Siparis.Kilo" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4" />

            <!-- TUTAR & PARA BİRİMİ & FATURA -->
            <div class="row g-3 align-items-center mb-1">
                <div class="col-sm-2">
                    <label asp-for="Siparis.Tutar" class="col-form-label">Tutar</label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="Siparis.Tutar" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Siparis.Tutar" class="text-danger"></span>
                </div>

                <div class="col-sm-2 text-sm-end">
                    <label asp-for="Siparis.ParaBirimi" class="col-form-label">Para Birimi</label>
                </div>
                <div class="col-sm-2">
                    <select asp-for="Siparis.ParaBirimi" class="form-select" asp-items="Model.ParaBirimiList">
                        <option value="">(Seç)</option>
                    </select>
                    <span asp-validation-for="Siparis.ParaBirimi" class="text-danger"></span>
                </div>

                <div class="col-sm-2 text-sm-end">
                    <label asp-for="Siparis.FaturaNo" class="col-form-label">Fatura No</label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="Siparis.FaturaNo" class="form-control" />
                    <span asp-validation-for="Siparis.FaturaNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-start mt-3">
                <div class="col-sm-2">
                    <label asp-for="Siparis.Notlar" class="col-form-label">Notlar</label>
                </div>
                <div class="col-sm-8">
                    <textarea asp-for="Siparis.Notlar" class="form-control" rows="2" placeholder="İsteğe bağlı…"></textarea>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <a asp-page="/Siparisler/Index" class="btn btn-secondary">Vazgeç</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
