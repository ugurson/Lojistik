@page "{id:int}"
@model Lojistik.Pages.Sevkiyatlar.EditModel
@{
    ViewData["Title"] = "Sevkiyat Düzenle";
}

<h2>Sevkiyat Düzenle</h2>

<form method="post">
    <input type="hidden" asp-for="Input.SevkiyatID" />

    <div class="mb-3">
        <label asp-for="Input.DorseID" class="form-label"></label>
        <select asp-for="Input.DorseID" class="form-select" asp-items="Model.DorselerSelect"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Input.PlanlananYuklemeTarihi" class="form-label"></label>
        <input asp-for="Input.PlanlananYuklemeTarihi" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Input.YuklemeTarihi" class="form-label"></label>
        <input asp-for="Input.YuklemeTarihi" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Input.VarisTarihi" class="form-label"></label>
        <input asp-for="Input.VarisTarihi" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Input.Durum" class="form-label"></label>
        <select asp-for="Input.Durum" class="form-select">
            <option value="0">0 - Yeni</option>
            <option value="1">1 - Planlandı</option>
            <option value="2">2 - Yolda</option>
            <option value="3">3 - Tamamlandı</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-page="./Index" class="btn btn-secondary">İptal</a>
</form>
