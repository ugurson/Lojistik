@page
@model Lojistik.Pages.Sevkiyatlar.IndexModel
@{
    ViewData["Title"] = "Sevkiyatlar";
    string yuklemeSort = Model.sort == "yukleme_desc" ? "yukleme_asc" : "yukleme_desc";
    string varisSort = Model.sort == "varis_desc" ? "varis_asc" : "varis_desc";
    string kodSort = Model.sort == "kod_desc" ? "kod_asc" : "kod_desc";
}

<h2 class="mb-3">Sevkiyatlar</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-sm-4">
        <input name="q" value="@Model.q" class="form-control" placeholder="Ara (kod, plaka, sürücü, CMR, MRN, müşteri)..." />
    </div>
    <div class="col-sm-2">
        <select name="durum" class="form-select" onchange="this.form.submit()">
            <option value="">Durum (Hepsi)</option>
            <option value="0" selected="@(Model.durum == 0)">0</option>
            <option value="1" selected="@(Model.durum == 1)">1</option>
            <option value="2" selected="@(Model.durum == 2)">2</option>
            <option value="3" selected="@(Model.durum == 3)">3</option>
            <option value="4" selected="@(Model.durum == 4)">4</option>
        </select>
    </div>
    <div class="col-sm-2">
        <select name="pageSize" class="form-select" onchange="this.form.submit()">
            @{
                int[] sizes = new[] { 10, 20, 50, 100 };
                foreach (var s in sizes)
                {
                    <option value="@s" selected="@(Model.pageSize == s)">@s</option>
                }
            }
        </select>
    </div>
    @if (Model.siparisId.HasValue)
    {
        <input type="hidden" name="siparisId" value="@Model.siparisId" />
    }
    <input type="hidden" name="page" value="1" />
    <input type="hidden" name="sort" value="@Model.sort" />
    <div class="col-sm-2">
        <button class="btn btn-primary w-100">Ara</button>
    </div>
    <div class="col-sm-2 text-end">
        <a asp-page="./Create" asp-route-siparisId="@Model.siparisId" class="btn btn-success w-100">+ Yeni Sevkiyat</a>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-sm table-hover align-middle">
        <thead>
            <tr>
                <th>ID</th>
                <th>
                    <a asp-page="./Index" asp-route-q="@Model.q" asp-route-durum="@Model.durum" asp-route-siparisId="@Model.siparisId"
                       asp-route-sort="@kodSort" asp-route-page="1" asp-route-pageSize="@Model.pageSize">
                        Kod
                    </a>
                </th>
                <th>Çekici</th>
                <th>Dorse</th>
                <th>Sürücü</th>
                <th>Yükleme Müşteri</th>
                <th>Boşaltma Müşteri</th>
                <th>
                    <a asp-page="./Index" asp-route-q="@Model.q" asp-route-durum="@Model.durum" asp-route-siparisId="@Model.siparisId"
                       asp-route-sort="@yuklemeSort" asp-route-page="1" asp-route-pageSize="@Model.pageSize">
                        Yükleme
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-q="@Model.q" asp-route-durum="@Model.durum" asp-route-siparisId="@Model.siparisId"
                       asp-route-sort="@varisSort" asp-route-page="1" asp-route-pageSize="@Model.pageSize">
                        Varış
                    </a>
                </th>
                <th>Durum</th>
                <th class="text-end">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items?.Count > 0)
            {
                foreach (var r in Model.Items)
                {
                    <tr>
                        <td>@r.SevkiyatID</td>
                        <td>@(string.IsNullOrWhiteSpace(r.SevkiyatKodu) ? "SV-" + r.SevkiyatID : r.SevkiyatKodu)</td>
                        <td>@r.CekiciPlaka</td>
                        <td>@r.DorsePlaka</td>
                        <td>@r.SurucuAdi</td>
                        <td>@r.YuklemeMusteri</td>
                        <td>@r.BosaltmaMusteri</td>
                        <td>
                            @if (r.YuklemeTarihi.HasValue)
                            {
                                @r.YuklemeTarihi.Value.ToString("dd.MM.yyyy HH:mm")
                            }
                            else if (r.PlanlananYuklemeTarihi.HasValue)
                            {

                                <span class="text-muted">@r.PlanlananYuklemeTarihi.Value.ToString("dd.MM.yyyy")</span>
                            }
                            else
                            {

                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td>@(r.VarisTarihi?.ToString("dd.MM.yyyy HH:mm") ?? "—")</td>
                        <td>
                            <span class="badge bg-@(r.Durum == 0 ? "secondary" : (r.Durum == 1 ? "info" : (r.Durum == 2 ? "primary" : (r.Durum == 3 ? "success" : "dark"))))">
                                @r.Durum
                            </span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a asp-page="./Details" asp-route-id="@r.SevkiyatID" class="btn btn-outline-primary">Detay</a>
                                <a asp-page="./Edit" asp-route-id="@r.SevkiyatID" class="btn btn-outline-warning">Düzenle</a>
                                <a asp-page="./Delete" asp-route-id="@r.SevkiyatID" class="btn btn-outline-danger">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="11" class="text-center text-muted">Kayıt bulunamadı.</td></tr>
            }
        </tbody>
    </table>
</div>

<nav class="d-flex justify-content-between align-items-center mt-3">
    <div class="text-muted">
        Toplam @Model.TotalCount kayıt — Sayfa @Model.page / @Model.TotalPages
    </div>
    <ul class="pagination mb-0">
        <li class="page-item @(Model.page <= 1 ? "disabled" : null)">
            <a class="page-link"
               asp-page="./Index"
               asp-route-q="@Model.q"
               asp-route-durum="@Model.durum"
               asp-route-siparisId="@Model.siparisId"
               asp-route-sort="@Model.sort"
               asp-route-page="@(Model.page - 1)"
               asp-route-pageSize="@Model.pageSize">Önceki</a>
        </li>
        <li class="page-item @(Model.page >= Model.TotalPages ? "disabled" : null)">
            <a class="page-link"
               asp-page="./Index"
               asp-route-q="@Model.q"
               asp-route-durum="@Model.durum"
               asp-route-siparisId="@Model.siparisId"
               asp-route-sort="@Model.sort"
               asp-route-page="@(Model.page + 1)"
               asp-route-pageSize="@Model.pageSize">Sonraki</a>
        </li>
    </ul>
</nav>
