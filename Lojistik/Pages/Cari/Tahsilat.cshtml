@page
@model Lojistik.Pages.Cari.TahsilatModel
@{
    ViewData["Title"] = "Tahsilat Ekle";
}

<h2 class="mb-3">Tahsilat Ekle</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@e.ErrorMessage</div>
        }
    </div>
}
@if (TempData["StatusMessage"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}

<form method="post" class="row g-3">
   
        @* Müşteri: ID gizli, ad readonly *@
        <input type="hidden" asp-for="Input.MusteriID" />
        <div class="col-md-6">
            <label class="form-label">Müşteri</label>
            <input class="form-control" value="@Model.SeciliMusteri?.MusteriAdi" readonly />
        </div>

    <div class="col-md-3">
        <label class="form-label">Tarih</label>
        <input asp-for="Input.Tarih" type="date" class="form-control" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Para Birimi</label>
        <select asp-for="Input.ParaBirimi" class="form-select">
            <option>TL</option>
            <option>EUR</option>
            <option>USD</option>
            <option>GBP</option>
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label">Tutar</label>
        <input asp-for="Input.Tutar" type="number" step="0.01" class="form-control" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Kur (opsiyonel)</label>
        <input asp-for="Input.Kur" type="number" step="0.000001" class="form-control" />
        <div class="form-text">PB TL değilse de boş bırakabilirsiniz.</div>
    </div>

    <div class="col-md-3">
        <label class="form-label">Evrak No (opsiyonel)</label>
        <input asp-for="Input.EvrakNo" class="form-control" maxlength="50" />
    </div>

    <div class="col-12">
        <label class="form-label">Açıklama</label>
        <input asp-for="Input.Aciklama" class="form-control" maxlength="300" />
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-success">Kaydet</button>
        <a asp-page="./Index" class="btn btn-outline-secondary">Geri</a>
    </div>
</form>
