@* Pages/SeferMasraflari/Details.cshtml *@
@page "{id:int}"
@model Lojistik.Pages.SeferMasraflari.DetailsModel
@{
    ViewData["Title"] = "Masraf Detayı";
    var x = Model.Data!;
}
<h2 class="mb-3">Masraf Detayı</h2>

<div class="mb-3 d-flex gap-2 flex-wrap">
    <a asp-page="./Edit" asp-route-id="@x.SeferMasrafID" class="btn btn-warning">Düzenle</a>
    <a asp-page="./Delete" asp-route-id="@x.SeferMasrafID" class="btn btn-danger">Sil</a>
    <a asp-page="/Seferler/Details" asp-route-id="@x.SeferID" class="btn btn-outline-secondary">Sefer’e Dön</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Sefer</dt>
            <dd class="col-sm-9"><a asp-page="/Seferler/Details" asp-route-id="@x.SeferID">SF-@x.SeferID</a></dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@x.Tarih.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Tip</dt>
            <dd class="col-sm-9">@x.MasrafTipi</dd>

            <dt class="col-sm-3">Tutar</dt>
            <dd class="col-sm-9">@x.Tutar.ToString("N2") @x.ParaBirimi</dd>

            <dt class="col-sm-3">Fatura/Belge</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(x.FaturaBelgeNo) ? x.FaturaBelgeNo : "—")</dd>

            <dt class="col-sm-3">Yer</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(x.Yer) ? x.Yer : "—")</dd>

            <dt class="col-sm-3">Ülke</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(x.Ulke) ? x.Ulke : "—")</dd>

            <dt class="col-sm-3">Notlar</dt>
            <dd class="col-sm-9 text-prewrap">@x.Notlar</dd>
        </dl>
    </div>
</div>
