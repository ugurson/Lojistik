@page
@model Lojistik.Pages.Seferler.DeleteModel
@{
    ViewData["Title"] = "Sefer Sil";
}

<h2 class="mb-3">Sefer Sil</h2>

@if (Model.Sefer != null)
{
    <div class="alert alert-warning">
        <strong>@Model.Sefer.SeferKodu</strong> seferini silmek istediğinize emin misiniz?
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-page="./Index" class="btn btn-secondary">İptal</a>
    </form>
}
else
{
    <div class="alert alert-info">
        Sefer bulunamadı.
    </div>
}
