@page
@model Lojistik.Pages.Seferler.CreateModel
@{
    ViewData["Title"] = "Yeni Sefer";
}

<h2 class="mb-3">Yeni Sefer</h2>

<form method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-4">
        <label asp-for="Input.SeferKodu" class="form-label">Sefer Kodu</label>
        <input asp-for="Input.SeferKodu" class="form-control" readonly />
    </div>

    <div class="col-md-4">
        <label asp-for="Input.AracID" class="form-label">Çekici</label>
        <select asp-for="Input.AracID" asp-items="Model.CekicilerSelect" class="form-select"></select>
        <span asp-validation-for="Input.AracID" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Input.DorseID" class="form-label">Dorse</label>
        <select asp-for="Input.DorseID" asp-items="Model.DorselerSelect" class="form-select">
            <option value="">(Yok)</option>
        </select>
        <span asp-validation-for="Input.DorseID" class="text-danger"></span>
    </div>

    <!-- ✅ Sürücü seçimi veya elle giriş -->
    <div class="col-md-6">
        <label class="form-label">Sürücü (Listeden Seç)</label>
        <select asp-for="Input.SoforID" asp-items="Model.SoforlerSelect" class="form-select">
            <option value="">(Listeden seç ya da boş bırak)</option>
        </select>
    </div>
    <div class="col-md-6">
        <label asp-for="Input.SurucuAdi" class="form-label">Sürücü Adı (Elle)</label>
        <input asp-for="Input.SurucuAdi" class="form-control" placeholder="İstersen elle yaz" />
        <small class="text-muted">Not: Eğer her ikisi de dolu ise <strong>elle yazılan</strong> ad kullanılacaktır.</small>
        <span asp-validation-for="Input.SurucuAdi" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.CikisTarihi" class="form-label">Çıkış</label>
        <input asp-for="Input.CikisTarihi" type="date" class="form-control" />
        <span asp-validation-for="Input.CikisTarihi" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.DonusTarihi" class="form-label">Dönüş</label>
        <input asp-for="Input.DonusTarihi" type="date" class="form-control" />
        <span asp-validation-for="Input.DonusTarihi" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Input.Durum" class="form-label">Durum</label>
        <select asp-for="Input.Durum" class="form-select">
            <option value="0">0 - Yeni</option>
            <option value="1">1 - Planlandı</option>
            <option value="2">2 - Yolda</option>
            <option value="3">3 - Tamamlandı</option>
            <option value="4">4 - İptal</option>
        </select>
        <span asp-validation-for="Input.Durum" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Input.Notlar" class="form-label">Notlar</label>
        <textarea asp-for="Input.Notlar" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Input.Notlar" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-success" type="submit">Kaydet</button>
        <a asp-page="./Index" class="btn btn-outline-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
