@page
@model Lojistik.Pages.Seferler.IndexModel
@{
    ViewData["Title"] = "Seferler";
    string cikisSort = Model.sort == "cikis_desc" ? "cikis_asc" : "cikis_desc";
    string donusSort = Model.sort == "donus_desc" ? "donus_asc" : "donus_desc";
    string kodSort = Model.sort == "kod_desc" ? "kod_asc" : "kod_desc";
}

<h2 class="mb-3">Seferler</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-sm-4">
        <input name="q" value="@Model.q" class="form-control" placeholder="Ara (kod, plaka, sürücü)..." />
    </div>
    <div class="col-sm-2">
        <select name="durum" class="form-select" onchange="this.form.submit()">
            <option value="">Durum (Hepsi)</option>
            <option value="0" selected="@(Model.durum == 0)">0</option>
            <option value="1" selected="@(Model.durum == 1)">1</option>
            <option value="2" selected="@(Model.durum == 2)">2</option>
            <option value="3" selected="@(Model.durum == 3)">3</option>
            <option value="4" selected="@(Model.durum == 4)">4</option>
        </select>
    </div>
    <div class="col-sm-2">
        <select name="pageSize" class="form-select" onchange="this.form.submit()">
            @{
                int[] sizes = new[] { 10, 20, 50, 100 };
                foreach (var s in sizes)
                {
                    <option value="@s" selected="@(Model.pageSize == s)">@s</option>
                }
            }
        </select>
    </div>
    <input type="hidden" name="page" value="1" />
    <input type="hidden" name="sort" value="@Model.sort" />
    <div class="col-sm-2">
        <button class="btn btn-primary w-100">Ara</button>
    </div>
    <div class="col-sm-2 text-end">
        <a asp-page="./Create" class="btn btn-success w-100">+ Yeni Sefer</a>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-sm table-hover align-middle">
        <thead>
            <tr>
                <th>
                    <a asp-page="./Index" asp-route-q="@Model.q" asp-route-durum="@Model.durum"
                       asp-route-sort="@kodSort" asp-route-page="1" asp-route-pageSize="@Model.pageSize">
                        Kod
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-q="@Model.q" asp-route-durum="@Model.durum"
                       asp-route-sort="@cikisSort" asp-route-page="1" asp-route-pageSize="@Model.pageSize">
                        Çıkış
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-q="@Model.q" asp-route-durum="@Model.durum"
                       asp-route-sort="@donusSort" asp-route-page="1" asp-route-pageSize="@Model.pageSize">
                        Dönüş
                    </a>
                </th>
                <th>Çekici</th>
                <th>Dorse</th>
                <th>Sürücü</th>
                <th>Durum</th>
                <th class="text-end">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items?.Count > 0)
            {
                foreach (var r in Model.Items)
                {
                    <tr>
                        <td>@(r.SeferKodu ?? ("SF-" + r.SeferID))</td>
                        <td>@r.CikisTarihi?.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@r.DonusTarihi?.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@r.CekiciPlaka</td>
                        <td>@r.DorsePlaka</td>
                        <td>@r.SurucuAdi</td>
                        <td>
                            <span class="badge bg-@(r.Durum == 0 ? "secondary" : (r.Durum == 1 ? "info" : (r.Durum == 2 ? "primary" : (r.Durum == 3 ? "success" : "dark"))))">
                                @r.Durum
                            </span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a asp-page="./Details" asp-route-id="@r.SeferID" class="btn btn-outline-primary">Detay</a>
                                <a asp-page="./Edit" asp-route-id="@r.SeferID" class="btn btn-outline-warning">Düzenle</a>
                                <a asp-page="./Delete" asp-route-id="@r.SeferID" class="btn btn-outline-danger">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="8" class="text-center text-muted">Kayıt bulunamadı.</td></tr>
            }
        </tbody>
    </table>
</div>

<nav class="d-flex justify-content-between align-items-center mt-3">
    <div class="text-muted">
        Toplam @Model.TotalCount kayıt — Sayfa @Model.page / @Model.TotalPages
    </div>
    <ul class="pagination mb-0">
        <li class="page-item @(Model.page <= 1 ? "disabled" : null)">
            <a class="page-link"
               asp-page="./Index"
               asp-route-q="@Model.q"
               asp-route-durum="@Model.durum"
               asp-route-sort="@Model.sort"
               asp-route-page="@(Model.page - 1)"
               asp-route-pageSize="@Model.pageSize">Önceki</a>
        </li>
        <li class="page-item @(Model.page >= Model.TotalPages ? "disabled" : null)">
            <a class="page-link"
               asp-page="./Index"
               asp-route-q="@Model.q"
               asp-route-durum="@Model.durum"
               asp-route-sort="@Model.sort"
               asp-route-page="@(Model.page + 1)"
               asp-route-pageSize="@Model.pageSize">Sonraki</a>
        </li>
    </ul>
</nav>
