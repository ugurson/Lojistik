@page
@model Lojistik.Pages.Seferler.DetailsModel
@{
    ViewData["Title"] = "Sefer Detayı";
}

<h2 class="mb-3">Sefer Detayı</h2>

<div class="mb-3 d-flex gap-2">
    <a asp-page="./Edit" asp-route-id="@Model.Data?.SeferID" class="btn btn-warning">Düzenle</a>
    <a asp-page="./Index" class="btn btn-secondary">Listeye Dön</a>
    <a asp-page="./AddSiparis" asp-route-seferId="@Model.Data.SeferID" class="btn btn-success">
        + Sipariş Ekle
    </a>
</div>

@if (Model.Data != null)
{
    <div class="card mb-4">
        <div class="card-header">Genel Bilgiler</div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Sefer Kodu</dt>
                <dd class="col-sm-9">@Model.Data.SeferKodu</dd>

                <dt class="col-sm-3">Çekici</dt>
                <dd class="col-sm-9">@Model.Data.AracPlaka</dd>

                <dt class="col-sm-3">Dorse</dt>
                <dd class="col-sm-9">@Model.Data.DorsePlaka</dd>

                <dt class="col-sm-3">Sürücü</dt>
                <dd class="col-sm-9">@Model.Data.SurucuAdi</dd>

                <dt class="col-sm-3">Çıkış</dt>
                <!-- SAAT KALDIRILDI -->
                <dd class="col-sm-9">@Model.Data.CikisTarihi?.ToString("dd.MM.yyyy")</dd>

                <dt class="col-sm-3">Dönüş</dt>
                <dd class="col-sm-9">@Model.Data.DonusTarihi?.ToString("dd.MM.yyyy HH:mm")</dd>

                @* DURUM SATIRI GİZLENDİ *@
                @* <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">@Model.Data.Durum</dd> *@

                <dt class="col-sm-3">Notlar</dt>
                <dd class="col-sm-9">@Model.Data.Notlar</dd>
            </dl>
        </div>
    </div>

    <h4>Bağlı Siparişler</h4>
    <table class="table table-sm table-bordered table-hover align-middle">
        <thead>
            <tr>
                <!-- ID KOLONU GİZLENDİ -->
                <th class="d-none">ID</th>
                <th>Tarih</th>
                <th>Yük Açıklaması</th>
                <th>Gönderen</th>
                <th>Alıcı</th>
                <th>Ülke</th>
                <th>Şehir</th>
                <th class="text-end">Tutar</th>
                <th>PB</th>
                <!-- DURUM KALDIRILDI, YERİNE FATURA NO EKLENDİ -->
                <th>Fatura No</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Siparisler.Count > 0)
            {
                foreach (var s in Model.Siparisler)
                {
                    <tr>
                        <!-- ID GİZLİ HÜCRE -->
                        <td class="d-none">@s.SiparisID</td>
                        <td>@s.SiparisTarihi.ToString("dd.MM.yyyy")</td>
                        <td>@s.YukAciklamasi</td>
                        <td>@s.Gonderen</td>
                        <td>@s.Alici</td>
                        <td>@s.AliciUlke</td>
                        <td>@s.AliciSehir</td>
                        <td class="text-end">@s.Tutar?.ToString("N2")</td>
                        <td>@s.ParaBirimi</td>
                        <td>@(string.IsNullOrWhiteSpace(s.FaturaNo) ? "—" : s.FaturaNo)</td>
                        <td>
                            <a asp-page="/Siparisler/Details" asp-route-id="@s.SiparisID" class="btn btn-sm btn-outline-primary">Aç</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="11" class="text-center text-muted">Bağlı sipariş yok.</td></tr>
            }
        </tbody>
    </table>
    <hr />
    <h4 class="mt-4 d-flex justify-content-between align-items-center">
        <span>Sefer Masrafları</span>
        <a class="btn btn-success btn-sm"
           asp-page="/SeferMasraflari/Create"
           asp-route-seferId="@Model.Data?.SeferID">
            + Masraf Ekle
        </a>
    </h4>

    @if (Model.MasrafToplamlari?.Count > 0)
    {
        <div class="alert alert-info py-2">
            <strong>Toplam:</strong>
            @foreach (var kv in Model.MasrafToplamlari)
            {
                <span class="me-3">@kv.Value.ToString("N2") @kv.Key</span>
            }
        </div>
    }

    <table class="table table-sm table-bordered table-hover align-middle">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Masraf Tipi</th>
                <th class="text-end">Tutar</th>
                <th>PB</th>
                <th>Fatura/Belge No</th>
                <th>Ülke</th>
                <th>Yer</th>
                <th>Notlar</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Masraflar?.Count > 0)
            {
                foreach (var m in Model.Masraflar)
                {
                    <tr>
                        <td>@m.Tarih.ToString("dd.MM.yyyy")</td>
                        <td>@m.MasrafTipi</td>
                        <td class="text-end">@m.Tutar.ToString("N2")</td>
                        <td>@m.ParaBirimi</td>
                        <td>@(string.IsNullOrWhiteSpace(m.FaturaBelgeNo) ? "—" : m.FaturaBelgeNo)</td>
                        <td>@m.Ulke</td>
                        <td>@m.Yer</td>
                        <td>@m.Notlar</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="8" class="text-center text-muted">Bu sefere kayıtlı masraf yok.</td></tr>
            }
        </tbody>
    </table>

}
