@* Pages/Seferler/Details.cshtml *@
@page "{id:int}"
@model Lojistik.Pages.Seferler.DetailsModel
@{
    ViewData["Title"] = "Sefer Detayı";
    var x = Model.Data!;
}
<h2 class="mb-3">Sefer Detayı</h2>

<div class="mb-3 d-flex gap-2 flex-wrap">
    <a asp-page="./Edit" asp-route-id="@x.SeferID" class="btn btn-warning">Düzenle</a>
    <a asp-page="./Delete" asp-route-id="@x.SeferID" class="btn btn-danger">Sil</a>
    <a asp-page="./Index" class="btn btn-outline-secondary">Listeye Dön</a>
    <a asp-page="/SeferMasraflari/Create" asp-route-seferId="@x.SeferID" class="btn btn-outline-primary">+ Masraf</a>
    <a asp-page="/SeferGelirleri/Create" asp-route-seferId="@x.SeferID" class="btn btn-outline-success">+ Gelir</a>
    <a asp-page="/SeferSevkiyatlar/Create" asp-route-seferId="@x.SeferID" class="btn btn-success">+ Sevkiyat Bağla</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@x.SeferID</dd>

            <dt class="col-sm-3">Kod</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(x.SeferKodu) ? x.SeferKodu : $"SF-{x.SeferID}")</dd>

            <dt class="col-sm-3">Çıkış</dt>
            <dd class="col-sm-9">@x.CikisTarihi?.ToString("dd.MM.yyyy HH:mm")</dd>

            <dt class="col-sm-3">Dönüş</dt>
            <dd class="col-sm-9">@x.DonusTarihi?.ToString("dd.MM.yyyy HH:mm")</dd>

            <dt class="col-sm-3">Çekici</dt>
            <dd class="col-sm-9">@x.CekiciPlaka</dd>

            <dt class="col-sm-3">Dorse</dt>
            <dd class="col-sm-9">@x.DorsePlaka</dd>

            <dt class="col-sm-3">Sürücü</dt>
            <dd class="col-sm-9">@x.SurucuAdi</dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(x.Durum == 0 ? "secondary" : (x.Durum == 1 ? "info" : (x.Durum == 2 ? "primary" : (x.Durum == 3 ? "success" : "dark"))))">
                    @x.Durum
                </span>
            </dd>

            <dt class="col-sm-3">Oluşturma</dt>
            <dd class="col-sm-9">@x.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

            <dt class="col-sm-3">Notlar</dt>
            <dd class="col-sm-9 text-prewrap">@x.Notlar</dd>
        </dl>
    </div>
</div>
