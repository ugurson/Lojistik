@* Pages/Seferler/Edit.cshtml *@
@page "{id:int}"
@model Lojistik.Pages.Seferler.EditModel
@{
    ViewData["Title"] = "Sefer Düzenle";
}
<h2 class="mb-3">Sefer Düzenle</h2>

<form method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Input.SeferID" />

    <div class="col-md-4">
        <label asp-for="Input.SeferKodu" class="form-label">Sefer Kodu</label>
        <input asp-for="Input.SeferKodu" class="form-control" />
        <span asp-validation-for="Input.SeferKodu" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Input.AracID" class="form-label">Çekici</label>
        <select asp-for="Input.AracID" asp-items="Model.CekicilerSelect" class="form-select"></select>
        <span asp-validation-for="Input.AracID" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Input.DorseID" class="form-label">Dorse</label>
        <select asp-for="Input.DorseID" asp-items="Model.DorselerSelect" class="form-select">
            <option value="">(Yok)</option>
        </select>
        <span asp-validation-for="Input.DorseID" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.SurucuAdi" class="form-label">Sürücü Adı</label>
        <input asp-for="Input.SurucuAdi" class="form-control" />
        <span asp-validation-for="Input.SurucuAdi" class="text-danger"></span>
    </div>
    <div class="col-md-6 d-none">
        <label asp-for="Input.SurucuID" class="form-label">Sürücü ID</label>
        <input asp-for="Input.SurucuID" class="form-control" />
        <span asp-validation-for="Input.SurucuID" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.CikisTarihi" class="form-label">Çıkış</label>
        <input asp-for="Input.CikisTarihi" type="datetime-local" class="form-control" />
        <span asp-validation-for="Input.CikisTarihi" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Input.DonusTarihi" class="form-label">Dönüş</label>
        <input asp-for="Input.DonusTarihi" type="datetime-local" class="form-control" />
        <span asp-validation-for="Input.DonusTarihi" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Input.Durum" class="form-label">Durum</label>
        <select asp-for="Input.Durum" class="form-select">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>
        <span asp-validation-for="Input.Durum" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Input.Notlar" class="form-label">Notlar</label>
        <textarea asp-for="Input.Notlar" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Input.Notlar" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a asp-page="./Details" asp-route-id="@Model.Input.SeferID" class="btn btn-outline-secondary">İptal</a>
        <a asp-page="./Delete" asp-route-id="@Model.Input.SeferID" class="btn btn-outline-danger">Sil</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
