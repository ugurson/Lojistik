@page "{id:int}"
@model Lojistik.Pages.Soforler.DetailsModel
@{
    ViewData["Title"] = "Şoför Detayı";
}
<h2 class="mb-3">Şoför Detayı</h2>

<dl class="row">
    <dt class="col-sm-3">Ad Soyad</dt>
    <dd class="col-sm-9">@Model.Data.AdSoyad</dd>
    <dt class="col-sm-3">Telefon</dt>
    <dd class="col-sm-9">@Model.Data.Telefon</dd>
    <dt class="col-sm-3">E-posta</dt>
    <dd class="col-sm-9">@Model.Data.Eposta</dd>
    <dt class="col-sm-3">TCKN</dt>
    <dd class="col-sm-9">@Model.Data.TCKimlikNo</dd>
    <dt class="col-sm-3">Ehliyet</dt>
    <dd class="col-sm-9">@Model.Data.EhliyetNo (@Model.Data.EhliyetSinifi)</dd>
    <dt class="col-sm-3">Ehliyet Geçer.</dt>
    <dd class="col-sm-9">@Model.Data.EhliyetGecerlilikTarihi:dd.MM.yyyy</dd>
    <dt class="col-sm-3">SRC</dt>
    <dd class="col-sm-9">@Model.Data.SRCBelgeNo</dd>
    <dt class="col-sm-3">Psikoteknik</dt>
    <dd class="col-sm-9">@Model.Data.PsikoteknikNo</dd>
    <dt class="col-sm-3">Pasaport</dt>
    <dd class="col-sm-9">@Model.Data.PasaportNo / @Model.Data.PasaportBitisTarihi:dd.MM.yyyy</dd>
    <dt class="col-sm-3">Vize Bitiş</dt>
    <dd class="col-sm-9">@Model.Data.VizeBitisTarihi:dd.MM.yyyy</dd>
    <dt class="col-sm-3">Takograf Kart</dt>
    <dd class="col-sm-9">@Model.Data.SurucuKartNo</dd>
    <dt class="col-sm-3">Durum</dt>
    <dd class="col-sm-9">@(Model.Data.Durum == 1 ? "Aktif" : "Pasif")</dd>
    <dt class="col-sm-3">Notlar</dt>
    <dd class="col-sm-9">@Model.Data.Notlar</dd>
</dl>

<div class="mt-3 d-flex gap-2">
    <a class="btn btn-secondary" asp-page="Index">Listeye Dön</a>
    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@Model.Data.SoforID">Düzenle</a>
</div>
